{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "baseUrl": "app/src/renderer",          // ① new base
    "paths": {
      "@/*": ["*"]                          // ② alias same as Vite
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "app/src/**/*",                         // ③ include all TS/TSX in new tree
    //"/vite.config.ts"
  ]
}