{
  "compilerOptions": {
    /* Runtime compatibility */
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",          // ← REQUIRED when module=CommonJS

    /* React / JSX */
    "jsx": "react-jsx",

    /* Interop conveniences */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,

    /* Path alias that matches Vite’s “@/” */
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/src/renderer/*"]
    },

    /* Type-checking */
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"]                     // gives bootstrap.js “require”, etc.
  },

  "include": [
    "app/src/**/*",
    "app/src/main/bootstrap.js"           // ensure bootstrap is compiled/typed
  ]
}
